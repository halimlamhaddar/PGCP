{% extends('@PGCP/layout.html.twig') %}
{% block title %}{{ parent() }} | Professeurs | AjouterCours{% endblock %}
{% block soustitre %}

    <li>
        <a href="{{ path('pgcp_professeur') }}">Professeurs</a>
    </li>
    <li class="active">
        <a href="{{ path('pgcp_professeur_ajouterCours') }}">Ajouter un cours</a>
    </li>

{% endblock %}
{% block content %}




    {{ form_start(form,{'attr':{'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}
    <div class="form-group">
        {{ form_label(form.intitule,"Intitul√© du cours",{'label_attr':{ 'class': 'col-sm-4 control-label' }}) }}
        <div class="col-sm-4">
            {{ form_widget(form.intitule,{'attr':{'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.description,"Description du Cours",{'label_attr':{ 'class': 'col-sm-4 control-label' }}) }}
        <div class="col-sm-4">
            {{ form_widget(form.description,{'attr':{'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.objectifs,"Objectifs du cours",{'label_attr':{ 'class': 'col-sm-4 control-label' }}) }}
        <div class="col-sm-4">
            {{ form_widget(form.objectifs,{'attr':{'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.lien,"Cours (PDF File)",{'label_attr':{ 'class': 'col-sm-4 control-label' }}) }}
        <div class="col-sm-4">
            {{ form_widget(form.lien,{'attr':{'class': 'file'}}) }}
        </div>
    </div>

    <div id="envoyer">
        {{ form_widget(form.submit,{'attr':{'class': 'btn btn-primary'}}) }}
    </div>

    {{ form_end(form) }}
    <br><br>
{% endblock %}